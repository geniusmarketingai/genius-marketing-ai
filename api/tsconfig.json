{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "module": "CommonJS",
    "moduleResolution": "node",
    "rootDir": ".",
    "baseUrl": ".", // Necessário para que paths funcione corretamente a partir daqui
    "outDir": ".dist", // Vamos testar com um outDir local para a api
    "paths": {
      "@shared/*": ["../shared/*"]
    },
    "types": ["node"]
  },
  "include": [
    "**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.test.ts",
    ".dist" // Excluir o próprio diretório de output
  ]
} 