  "compilerOptions": {
    "noEmit": false,
    "allowImportingTsExtensions": false,
    "module": "esnext",
    "moduleResolution": "nodenext",
    "target": "es2020",
    "outDir": "dist",
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {},
    "types": ["node"]
  },
  "include": [
    "**/*.ts"
